<Window x:Class="CharacterSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterSheet"
        mc:Ignorable="d"
        Title="Character Sheet"
        Height="800"
        Width="600">

    <Window.Resources>
        <Style x:Key="tbStyle" 
               TargetType="TextBox">
            <Setter Property="Margin" Value="5 8 5 8" />
        </Style>
        <Style x:Key="btnRandom"
               TargetType="Button">
            <Setter Property="Width"
                    Value="30" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="5 5 5 5" />
        </Style>
        <Style x:Key="comboBox" TargetType="ComboBox">
            <Setter Property="Margin"
                    Value="5 10 5 10" />
        </Style>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Figur
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">
                    
                </Button>

            </Grid>

            <Grid Grid.Row="1"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Name
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Klasse
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

        </Grid>

        <!-- Appearance -->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Spezial
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Alter
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="1"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Spezies
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="1"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Geburtstag
                </TextBlock>
                <!-- TODO Create Date input field -->
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Herkunft
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Geschlecht
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="3"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Glaube
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="3"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Händigkeit
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="4"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Stand
                </TextBlock>
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource comboBox}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="4"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Gestalt
                </TextBlock>
                <TextBox Grid.Row="1"
                          Grid.Column="1"
                          Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="5"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Größe
                </TextBlock>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

            <Grid Grid.Row="5"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Padding="5 10 5 10">
                    Gewicht
                </TextBlock>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Style="{StaticResource tbStyle}" />
                <Button Grid.Column="2"
                        Style="{StaticResource btnRandom}">

                </Button>

            </Grid>

        </Grid>

        <!-- Attributes -->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Strength
            </TextBlock>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Padding="5 10 5 10">
                Aussehen
            </TextBlock>
            <TextBox Grid.Row="0"
                     Grid.Column="3"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Gewandheit
            </TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Padding="5 10 5 10">
                Pers. Ausstrahlung
            </TextBlock>
            <TextBox Grid.Row="1"
                     Grid.Column="3"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Geschicklichkeit
            </TextBlock>
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Padding="5 10 5 10">
                Willenskraft
            </TextBlock>
            <TextBox Grid.Row="2"
                     Grid.Column="3"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Konstitution
            </TextBlock>
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="2"
                       Padding="5 10 5 10">
                KAW
            </TextBlock>
            <TextBox Grid.Row="3"
                     Grid.Column="3"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Intelligenz
            </TextBlock>
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="4"
                       Grid.Column="2"
                       Padding="5 10 5 10">
                Bewegung
            </TextBlock>
            <TextBox Grid.Row="4"
                     Grid.Column="3"
                     Style="{StaticResource tbStyle}" />

            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Padding="5 10 5 10">
                Zaubertalent
            </TextBlock>
            <TextBox Grid.Row="5"
                     Grid.Column="1"
                     Style="{StaticResource tbStyle}" />
            
        </Grid>

    </Grid>

</Window>
